<h1>Users</h1>

<%= link_to 'New', new_user_path %>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Phone</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.full_name %></td>
			<td><%= user.phone_number %></td>
			<td><%= user.email %></td>
			<td><%= link_to 'Show',	user_path(user) %>
														
			</td>
			<td><%= link_to 'Edit', edit_user_path(user) %></td>
			<td><%= link_to 'Destroy',	user_path(user),	
																	method: :delete,
																	data: { confirm: 'Are you sure?' } %>
														
			</td>

		</tr>
		<% end %>
	</tbody>
</table>